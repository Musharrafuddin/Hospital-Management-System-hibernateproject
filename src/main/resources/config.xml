<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/HosptalManagementSystem</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">system</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.project.hibernate.entity.Patient"></mapping>
        <mapping class="com.project.hibernate.entity.Doctor"></mapping>
        <mapping class="com.project.hibernate.entity.Appointment"></mapping>
        <mapping class="com.project.hibernate.entity.Invoice"></mapping>
        <mapping class="com.project.hibernate.entity.Prescription"></mapping>

    </session-factory>
</hibernate-configuration>